#:import HarmonicaWidget component.harmonica_widget

<DictionaryScreen>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            hidden: app.is_mobile
            # size_hint_y: 0 if app.is_mobile else None
            opacity: 1.0 if not app.is_mobile else 0
            height: '48dp' if not app.is_mobile else 0
            ActionView:
                use_separator: True
                ActionPrevious:
                    with_previous: True
                    on_release: app.next_screen('main_screen')
                    title: app._('game_harmonica', app.locale)
                ActionButton:
                    text: app._('button_clear', app.locale)
                    on_release: app.next_screen('dictionary_screen')
                ActionButton:
                    text: app._('button_shuffle', app.locale)
                    on_release:
                        app.init_store('')
                        app.refresh_widgets()
        Accordion:
            AccordionItem:
                title: "%s & %s" % (app.locale_to, app.locale)
                collapse: False
                BoxLayout:
                    HarmonicaWidget:
                        origin: True
                        secondary: True
            AccordionItem:
                title: "%s -> %s" % (app.locale_to, app.locale)
                collapse: True
                BoxLayout:
                    HarmonicaWidget:
                        origin: True
                        secondary: False
            AccordionItem:
                title: "%s -> %s" % (app.locale, app.locale_to)
                collapse: True
                BoxLayout:
                    HarmonicaWidget:
                        origin: False
                        secondary: True
        ActionBar:
            hidden: False if app.is_mobile else True
            # size_hint_y: None if app.is_mobile else 0
            opacity: 1.0 if app.is_mobile else 0
            height: '48dp' if app.is_mobile else 0
            ActionView:
                use_separator: True
                ActionPrevious:
                    with_previous: True
                    on_release: app.next_screen('main_screen')
                    title: app._('game_harmonica', app.locale)
                ActionButton:
                    text: app._('button_clear', app.locale)
                    on_release: app.next_screen('dictionary_screen')
                ActionButton:
                    text: app._('button_shuffle', app.locale)
                    on_release:
                        app.init_store('')
                        app.refresh_widgets()
