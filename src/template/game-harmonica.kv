#:import HarmonicaWidget component.harmonica_widget

BoxLayout:
    orientation: 'vertical'
    ActionBar:
        hidden: app.is_mobile
        # size_hint_y: 0 if app.is_mobile else None
        opacity: 1.0 if not app.is_mobile else 0
        height: '48dp' if not app.is_mobile else 0
        ActionView:
            use_separator: True
            ActionPrevious:
                with_previous: True
                on_release: app.next_screen('main')
                title: 'Harmonica'
            ActionButton:
                text: 'Shuffle'
    Accordion:
        AccordionItem:
            title: 'PL & RU'
            collapse: False
            HarmonicaWidget:
                origin: True
                secondary: True
        AccordionItem:
            title: 'PL -> RU'
            collapse: True
            HarmonicaWidget:
                origin: True
                secondary: False
        AccordionItem:
            title: 'RU -> PL'
            collapse: True
            HarmonicaWidget:
                origin: False
                secondary: True
    ActionBar:
        hidden: False if app.is_mobile else True
        # size_hint_y: None if app.is_mobile else 0
        opacity: 1.0 if app.is_mobile else 0
        height: '48dp' if app.is_mobile else 0
        ActionView:
            use_separator: True
            ActionPrevious:
                with_previous: True
                on_release: app.next_screen('main')
                title: 'Harmonica'
            ActionButton:
                text: 'Shuffle'
