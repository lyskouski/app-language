#:import RecorderWidget component.recorder_widget

<ArticulationScreen>:
    BoxLayout:
        orientation: 'vertical'

        ActionBar:
            hidden: app.is_mobile
            # size_hint_y: 0 if app.is_mobile else None
            opacity: 1.0 if not app.is_mobile else 0
            height: '48dp' if not app.is_mobile else 0
            ActionView:
                use_separator: True
                ActionPrevious:
                    with_previous: True
                    on_release: app.next_screen('main_screen')
                    title: app._('game_articulation', app.locale)

        RecorderWidget:
            orientation: 'horizontal'
            padding: 10
            spacing: 10

        ActionBar:
            hidden: False if app.is_mobile else True
            # size_hint_y: None if app.is_mobile else 0
            opacity: 1.0 if app.is_mobile else 0
            height: '48dp' if app.is_mobile else 0
            ActionView:
                use_separator: True
                ActionPrevious:
                    with_previous: True
                    on_release: app.next_screen('main_screen')
                    title: app._('game_articulation', app.locale)

<MultilineLabel>:
    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.width, None
    halign: "left"
    valign: "middle"
